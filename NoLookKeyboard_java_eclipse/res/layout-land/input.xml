<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#2a2a2a"
		>
		<com.teuskim.nlkeyboard.NLKeyboardView	
			android:id="@+id/keyboard_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			/>
		<com.teuskim.nlkeyboard.NLKeyboardView	
			android:id="@+id/keyboard_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			/>
		<include 
			android:id="@+id/custom_keymap_left"
			layout="@layout/custom_keymap"
			android:layout_width="150dip"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/keyboard_left"
			android:visibility="gone"
			/>
		<include 
			android:id="@+id/custom_keymap_right"
			layout="@layout/custom_keymap"
			android:layout_width="150dip"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/keyboard_right"
			android:visibility="gone"
			/>
		<HorizontalScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_toLeftOf="@id/keyboard_right"
			android:layout_toRightOf="@id/keyboard_left"
			android:scrollbars="none"
			android:background="@drawable/bg_word_history"
			>
			<LinearLayout
				android:id="@+id/history_list_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
		</HorizontalScrollView>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_toLeftOf="@id/keyboard_right"
			android:layout_toRightOf="@id/keyboard_left"
			android:layout_alignBottom="@id/keyboard_left"
			android:orientation="vertical"
			>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
				<Button
					android:id="@+id/btn_repeat_left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:text="@string/btn_repeat"
					android:textSize="14sp"
					android:background="@drawable/bg_btn_white"
					/>
				<Button
					android:id="@+id/btn_setting"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:text="@string/btn_setting"
					android:textSize="14sp"
					android:background="@drawable/bg_btn_white"
					/>
				<View
					android:layout_width="fill_parent"
					android:layout_height="1dip"
					android:layout_weight="1"
					/>
				<Button
					android:id="@+id/btn_backspace"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:text="@string/btn_backspace"
					android:textSize="14sp"
					android:background="@drawable/bg_btn_white"
					/>
				<Button
					android:id="@+id/btn_repeat_right"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:text="@string/btn_repeat"
					android:textSize="14sp"
					android:background="@drawable/bg_btn_white"
					/>
			</LinearLayout>
			<Button
				android:id="@+id/btn_space"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_margin="2dip"
				android:text="@string/btn_space"
				android:textSize="14sp"
				android:background="@drawable/bg_btn_white"
				/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
